<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.tdsmy.system.mapper.RoleMapper">
    <insert id="insertRole">
        insert into role (role_name, role_purview)
        values (#{roleName}, #{rolePurview});
    </insert>
    <update id="updateRole">
        update role
        set role_purview =#{rolePurview}
        where role_id = #{roleId};
    </update>
    <delete id="deleteRole">
        delete
        from role
        where role_id = #{roleId};
    </delete>
    <select id="selectRoleList" resultType="cn.tdsmy.system.beans.Role">
        select *
        from role;
    </select>
</mapper>